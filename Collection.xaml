					<ColumnDefinition Width="3*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*"/>
					<RowDefinition Height="4*"/>
					<RowDefinition Height="1*"/>
					<RowDefinition Height="4*"/>
					<RowDefinition Height="1*"/>
					<RowDefinition Height="4*"/>
